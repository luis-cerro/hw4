<h1><%= @place["name"] %></h1>

<% if @current_user %> 
<h2>My Posts</h2>
<p>
  <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Post</a>
</p>

<% for post in @posts %>
  <h3><%= post["title"] %></h3>
  <h4><%= post["posted_on"] %></h4>
  <p><%= post["description"] %></p>
<% end %>

<p>
  <a href="/places" class="btn btn-secondary">Back to All Places</a>
</p>

<% else %>

<p>
  <a href="/places">Back to All Places</a>
</p>

<% end %>